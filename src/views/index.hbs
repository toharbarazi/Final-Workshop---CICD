<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <Title>Random Name</Title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    </head>
    <body style="padding:15px;">
        <h1>Random Name Generator</h1>
        <div class="result"></div>
        
        <div class="col-md-3 form-switch">
		<input class="form-check-input" checked type="checkbox" id="lastName" name="lastName" value="1">
		<label> Generate last name as well</label><br>
		</div>

        <br>

        <div class="col-md-3">
        <button class="btn btn-primary" id="generate">Get Name</button>
        <script src="./app.js"></script>
        <script>
            const resultDiv = document.querySelector('.result');
            const generateBtn = document.querySelector('#generate');
            generateBtn.addEventListener('click', () => {
                if (document.getElementById('lastName').checked){
                loadRandomName(resultDiv, 1);
                }
                else {
                    loadRandomName(resultDiv, 0);
                }
            });
        </script>
        </div>
    </body>
</html>